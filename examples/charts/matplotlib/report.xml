<?xml version = "1.0" encoding = "UTF-8"?>
<!DOCTYPE jasperReport PUBLIC "//JasperReports//DTD Report Design//EN"
        "http://jasperreports.sourceforge.net/dtds/jasperreport.dtd">

<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
   http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              whenNoDataType="NoDataSection"
              name="report" topMargin="10" bottomMargin="10">

  <title>
        <band height="400">

            <textField>
                <reportElement x="0" y="10" width="595" height="20"/>
                <textElement textAlignment="Center">
                    <font size="12" fontName="DejaVu Sans"/>
                </textElement>

                <textFieldExpression>
                    <![CDATA["Multiple charts"]]>
                </textFieldExpression>
            </textField>

            <image>
                <reportElement x="0" y="0" width="550" height="350"/>
                <imageExpression>
                    <![CDATA["hbar.png"]]>
                </imageExpression>
            </image>

        </band>
    </title>

    <summary>

        <band height="800">

            <image>
                <reportElement x="0" y="0" width="550" height="350"/>
                <imageExpression>
                    <![CDATA["piechart.png"]]>
                </imageExpression>
            </image>

            <image>
                <reportElement x="0" y="360" width="550" height="350"/>
                <imageExpression>
                    <![CDATA["barchart.png"]]>
                </imageExpression>
            </image>


        </band>

    </summary>

</jasperReport>
